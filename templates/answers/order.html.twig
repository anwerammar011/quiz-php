{% extends 'base.html.twig' %}

{% block body %}
 <h1> Le classement des utilisateurs: </h1>
 <table class="table">
  <thead>
    <tr>
      <th scope="col">User Id</th>
      <th scope="col">Name</th>
      <th scope="col">Correct Responses</th>
    </tr>
  </thead>
  <tbody>
    {% for ord in order %}
    <tr>
      <th scope="row">{{ ord.user_id }}</th>
      <td>{{ord.user_first_name}}</td>
      <td>{{ord.nbr_right_answer}}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
<button type="button" class="btn btn-success"  onclick="history.back()">Retour </button>
{% endblock %}
